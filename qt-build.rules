<VisualStudioToolFile
	Name="Qt GUI Toolkit Rules (by Daher Alfawares, modified by Vitaly Turinsky)"
	Version="8.00"
	>
	<Rules>
    <CustomBuildRule
			Name="UIC"
			DisplayName="Qt UI Compiler"
			CommandLine="%QTDIR%\bin\uic.exe [inputs] -o &quot;GeneratedFiles\[QtUicPrefix]$(InputName)[QtUicExt]&quot;"
			Outputs="&quot;GeneratedFiles\[QtUicPrefix]$(InputName)[QtUicExt]&quot;"
			FileExtensions="*.ui"
			ExecutionDescription="UICing $(InputName).ui"
			>
      <Properties>
        <StringProperty
					Name="QtUicExt"
					DisplayName="UI Header file extension"
					Category="Output"
					Description="The header file extension generated by the UIC Compiler. (Example: .h)"
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
					DefaultValue=".hpp"
				/>
        <StringProperty
					Name="QtUicPrefix"
					DisplayName="UI Header file prefix"
					Category="Output"
					Description="The prefix string to be used for UIC output. ( usually ui_ )"
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
					DefaultValue="ui_"
				/>
      </Properties>
    </CustomBuildRule>
    <CustomBuildRule
			Name="MOC"
			DisplayName="Qt Meta Object Compiler"
			CommandLine="%QTDIR%\bin\moc.exe [QtMocNoWarnings] [QtCoreLib] [QtShared] [QtThread] [QtUnicode] [QtLargeFile] [QtKeywords] [QtOpenGLLib] [QtNoDebug] [QtGuiLib] [Includes] [Inputs] -o&quot;GeneratedFiles\$(IntDir)\[QtMocPref]$(InputName).cpp&quot;"
			Outputs="GeneratedFiles\$(IntDir)\[QtMocPref]$(InputName).cpp"
			FileExtensions="*.hxx"
			ExecutionDescription="MOCing $(InputName).hxx"
      ShowOnlyRuleProperties="true"
			>
      <Properties>
        <StringProperty
          Name="QtMocPref"
          DisplayName="Output file prefix"
          Category="Output"
          Description="A prefix is added to the source and object files generated to prevent conflict with your source files. [Example: moc_ leads to a.hxx -> moc_a.cpp]"
          HelpURL="http://code.google.com/p/xr-qt-msvc/"
          Switch="[value]"
          DefaultValue="moc_"
				/>
        <StringProperty
					Name="QtCommandLine"
					DisplayName="C++ Command Line Options"
					Category="General"
					Description="Copy the command line options from your C/C++ section to match the qt compilation with your setup. Make sure you remove the /Fo option, for more details refer to the documentation."
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
				/>
		<StringProperty
					Name="Includes"
					DisplayName="Additional Includes"
					Category="General"
					Description="..."
					Switch="[value]"
					DefaultValue="&quot;-I.\GeneratedFiles -I.&quot; &quot;-I$(QTDIR)\include -I.\GeneratedFiles\$(ConfigurationName)\.&quot; &quot;-I$(QTDIR)\include\QtCore&quot; &quot;-I$(QTDIR)\include\QtGui&quot;"
				/>
		<BooleanProperty
					Name="Win32"
					DisplayName="Define a WIN32 macro"
					Category="General"
					Description="Define a WIN32 macro"
					Switch="-DWIN32"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtShared"
					DisplayName="Use QT as a Shared Library?"
					Category="Moc Definitions"
					Description="Use QT as a Shared Library?"
					Switch="-DQT_SHARED"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtThread"
					DisplayName="Multi-threaded Support?"
					Category="Moc Definitions"
					Switch="-DQT_THREAD_SUPPORT"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtUnicode"
					DisplayName="Unicode Support?"
					Category="Moc Definitions"
					Switch="-DUNICODE"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtLargeFile"
					DisplayName="Large File Support?"
					Category="Moc Definitions"
					Switch="-DQT_LARGEFILE_SUPPORT"
					DefaultValue="true"
				/>
		<BooleanProperty
					Name="QtDll"
					DisplayName="Qt dll Support?"
					Category="Moc Definitions"
					Switch="-DQT_DLL"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtKeywords"
					DisplayName="Disable QT Keywords."
					Category="Moc Definitions"
					Description="If QT_NO_KEYWORDS is defined, &quot;signals&quot;, &quot;slots&quot; and &quot;emit&quot; are not defined, thus increasing the interoperability with other toolkits by avoiding some common name clashes. However, the SIGNAL() and SLOT() macros are still defined, which may cause name clashes still."
					Switch="-DQT_NO_KEYWORDS"
					DefaultValue="false"
				/>
        <BooleanProperty
					Name="QtNoDebug"
					DisplayName="Disable QT Debuging"
					Category="Moc Definitions"
					Switch="-DQT_NO_DEBUG"
					DefaultValue="false"
				/>
        <BooleanProperty
					Name="QtGuiLib"
					DisplayName="Use QT Gui Library"
					Category="QT Libraries"
					Switch="-DQT_GUI_LIB"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtCoreLib"
					DisplayName="Use QT Core Library"
					Category="QT Libraries"
					Switch="-DQT_CORE_LIB"
					DefaultValue="true"
				/>
        <BooleanProperty
					Name="QtOpenGLLib"
					DisplayName="Use QT OpenGL Library"
					Category="QT Libraries"
					Switch="-DQT_OPENGL_LIB"
					DefaultValue="false"
				/>
        <BooleanProperty
					Name="QtMocNoWarnings"
					DisplayName="Do not display warnings"
					Category="General"
					Description="do not display warnings"
					Switch="/nw"
					DefaultValue="false"
				/>
      </Properties>
    </CustomBuildRule>
    <CustomBuildRule
			Name="QRC"
			DisplayName="Qt Resource Compiler"
			CommandLine="%QTDIR%\bin\rcc.exe [inputs] -o GeneratedFiles\$(IntDir)\[QtQrcPref]$(InputName).cpp"
			Outputs="GeneratedFiles\$(IntDir)\[QtQrcPref]$(InputName).cpp"
			FileExtensions="*.qrc"
			ExecutionDescription="QRCing $(InputName).qrc"
			>
      <Properties>
        <StringProperty
					Name="QtCommandLine"
					DisplayName="C++ Command Line Options"
					Category="General"
					Description="Copy the command line options from your C/C++ section to match the qt compilation with your setup. Make sure you remove the /Fo option, for more details refer to the documentation."
					HelpURL="http://code.google.com/p/xr-core/wiki/QtRules"
					Switch="[value]"
				/>
        <StringProperty
          Name="QtQrcPref"
          DisplayName="Output file prefix"
          Category="Output"
          Description="A prefix is added to the source and object files generated to prevent conflict with your source files. [Example: qrc_ leads to qrc_a.qrc -> qrc_a.cpp]"
          HelpURL="http://code.google.com/p/xr-qt-msvc/"
          Switch="[value]"
          DefaultValue="qrc_"
				/>
      </Properties>
    </CustomBuildRule>
  </Rules>
</VisualStudioToolFile>
